<?xml version="1.0" encoding="UTF-8"?>
<project name="GestionBlog" default="default" basedir=".">
    <description>Builds, tests, and runs the project GestionBlog.</description>
    <import file="nbproject/build-impl.xml"/>

    <!-- Add the following lines to import JavaMail dependency -->
    <property name="ivy.install.version" value="2.5.0" />
    <property name="ivy.settings.dir" value="${basedir}/nbproject" />
    <property name="ivy.retrieve.dir" value="${basedir}/lib" />
    <target name="resolve-ivy">
        <mkdir dir="${ivy.retrieve.dir}" />
        <ivy:settings file="${ivy.settings.dir}/ivysettings.xml" />
        <ivy:retrieve />
    </target>
    <path id="javamail.classpath">
        <fileset dir="${ivy.retrieve.dir}">
            <include name="javax.mail-*.jar" />
        </fileset>
    </path>
    <taskdef name="mail"
             classname="org.apache.tools.ant.taskdefs.email.EmailTask"
             classpathref="javamail.classpath"/>

</project>
